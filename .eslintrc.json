{
  "parserOptions": {
    "ecmaVersion": 6,
    "jsx": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-var": "off",
    "comma-dangle": "off",
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Polymer"
        ]
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 200
      }
    ],
    "valid-jsdoc": "warn",
    "require-jsdoc": "warn"
  },
  "globals": {
    "Polymer": true,
    "ga": true
  }
}
